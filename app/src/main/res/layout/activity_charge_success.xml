<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.sopt.saver.saver.ChargeSuccessActivity">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- 상단바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/category_navibarbg"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/charge_back"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:layout_weight="0.1"
                    android:id="@+id/charge2_charge_btn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전하기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#323232"
                    android:id="@+id/charge2_navi"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:layout_weight="0.8"/>


                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="right"
                    android:layout_weight="0.1"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전신청이 완료되었습니다"
                android:textColor="#FB7926"
                android:id="@+id/charge2_h1"
                android:includeFontPadding="false"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/charge2_greybox"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="충전금액"
                        android:id="@+id/charge2_money_txt"
                        android:textColor="#FB9726"
                        android:includeFontPadding="false"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="임시금액"
                        android:includeFontPadding="false"
                        android:id="@+id/charge2_money"
                        android:textColor="#323232"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="충전방법"
                        android:includeFontPadding="false"
                        android:textColor="#FB9726"
                        android:id="@+id/charge2_how_txt"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입금/무통장"
                            android:includeFontPadding="false"
                            android:id="@+id/charge2_money_input"
                            android:textColor="#323232"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="은행"
                                android:textColor="#323232"
                                android:includeFontPadding="false"
                                android:layout_marginTop="5dp"
                                android:id="@+id/charge2_bank"
                                android:textSize="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / 계좌번호 12345-353-5536"
                                android:textColor="#323232"
                                android:layout_marginTop="5dp"
                                android:includeFontPadding="false"
                                android:id="@+id/charge2_account"
                                android:textSize="12dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예금주명 Saver"
                            android:textColor="#323232"
                            android:layout_marginTop="5dp"
                            android:includeFontPadding="false"
                            android:id="@+id/charge2_ownername"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="입금기한"
                        android:includeFontPadding="false"
                        android:textColor="#FB9726"
                        android:id="@+id/charge2_date_txt"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="07.11 18:00"
                        android:includeFontPadding="false"
                        android:id="@+id/charge2_date"
                        android:textColor="#323232"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="입금자명"
                        android:includeFontPadding="false"
                        android:textColor="#FB9726"
                        android:id="@+id/charge2_name_txt"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="김말이"
                        android:textColor="#323232"
                        android:includeFontPadding="false"
                        android:id="@+id/charge2_name"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="입금금액"
                        android:includeFontPadding="false"
                        android:textColor="#FB9726"
                        android:id="@+id/charge2_charge_money_txt"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="입금금액"
                        android:includeFontPadding="false"
                        android:textColor="#323232"
                        android:id="@+id/charge2_charge_money"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입금자명이 다를 경우 문의해주세요"
                android:textSize="10dp"
                android:id="@+id/charge2_sub"
                android:textColor="#747474"
                android:includeFontPadding="false"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

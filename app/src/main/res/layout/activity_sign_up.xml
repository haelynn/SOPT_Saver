<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.sopt.saver.saver.Sign.SignUpActivity">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/signup_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/signup_back" />

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="회원가입"
                android:textStyle="bold"
                android:textColor="#E4E4E5"
                android:textSize="16dp" />


            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

    <!-- 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center_vertical"
        android:orientation="vertical">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="40dp"
           android:paddingRight="40dp"
           android:scrollbars="none">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:id="@+id/signup_id_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="아이디"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_id_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_pw_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="비밀번호"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_pw_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:includeFontPadding="false"
                      android:inputType="textPassword"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_pw_check_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="비밀번호 확인"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_pw_check_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:includeFontPadding="false"
                      android:inputType="textPassword"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_name_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="이름"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_name_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_phone_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="핸드폰 번호"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_phone_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:hint="예시)01012341234"
                      android:includeFontPadding="false"
                      android:inputType="phone"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp">

                  <TextView
                      android:id="@+id/signup_bank_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="은행"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <TextView
                      android:id="@+id/signup_bank_spinner"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:text="선택하기"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_account_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="계좌번호"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_account_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:includeFontPadding="false"
                      android:inputType="number"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp">

                  <TextView
                      android:id="@+id/signup_birth_title"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:includeFontPadding="false"
                      android:text="생년월일"
                      android:textColor="#E4E4E5"
                      android:textSize="12dp" />

                  <EditText
                      android:id="@+id/signup_birth_edit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:backgroundTint="@android:color/white"
                      android:hint="예시)19950429"
                      android:includeFontPadding="false"
                      android:inputType="date"
                      android:paddingLeft="10dp"
                      android:textColor="#E4E4E5"
                      android:textColorHint="#E4E4E5"
                      android:textSize="12dp" />
              </LinearLayout>

              <RadioGroup
                  android:id="@+id/signup_radio_group"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignLeft="@id/signup_id_title"
                  android:layout_below="@id/signup_birth_title"
                  android:layout_marginTop="8dp">

                  <CheckBox
                      android:id="@+id/signup_sms_check"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:text="SMS 수신에 동의합니다 (선택)"
                      android:textColor="#B7B7BC"
                      android:textSize="12dp" />

                  <CheckBox
                      android:id="@+id/signup_email_check"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:text="Email 수신에 동의합니다 (선택)"
                      android:textColor="#B7B7BC"
                      android:textSize="12dp" />

                  <CheckBox
                      android:id="@+id/signup_use_check"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:text="이용약관에 동의합니다."
                      android:textColor="#B7B7BC"
                      android:textSize="12dp" />

                  <CheckBox
                      android:id="@+id/signup_personal_check"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:includeFontPadding="false"
                      android:paddingLeft="10dp"
                      android:text="개인정보 취급방침에 동의합니다"
                      android:textColor="#B7B7BC"
                      android:textSize="12dp" />
              </RadioGroup>


              <ImageButton
                  android:id="@+id/signup_submit_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_marginBottom="20dp"
                  android:background="@drawable/signup_signup" />
          </LinearLayout>

       </ScrollView>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/login_bg"
    tools:context="com.sopt.saver.saver.Sign.SignUpAddinfoActivity">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:weightSum="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signup_back"
                android:scaleType="fitCenter"
                android:layout_gravity="left"
                android:background="@android:color/transparent"
                android:layout_weight="0.1"
                android:id="@+id/signup_back_btn"/>

            <TextView
                android:id="@+id/signup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="추가정보 입력"
                android:textStyle="bold"
                android:textColor="#E4E4E5"
                android:textSize="16dp" />


            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingLeft="50dp"
           android:paddingRight="50dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/signup_area_title"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:layout_height="wrap_content"
                   android:includeFontPadding="false"
                   android:text="지역"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"/>

               <TextView
                   android:id="@+id/signup_area_spinner"
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:includeFontPadding="false"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"
                   android:layout_height="wrap_content"
                   android:text="선택하기" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="26dp">

               <TextView
                   android:id="@+id/signup_like_title"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:includeFontPadding="false"
                   android:layout_height="wrap_content"
                   android:text="선호방법"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"/>

               <TextView
                   android:id="@+id/signup_like_spinner"
                   android:layout_width="0dp"
                   android:includeFontPadding="false"
                   android:layout_weight="6"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"
                   android:layout_height="wrap_content"
                   android:text="선택하기" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="26dp">

               <TextView
                   android:id="@+id/signup_card_title"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:includeFontPadding="false"
                   android:layout_height="wrap_content"
                   android:text="사용카드"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"/>

               <TextView
                   android:id="@+id/signup_card_spinner"
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:textSize="12dp"
                   android:includeFontPadding="false"
                   android:textColor="#B7B7BC"
                   android:layout_height="wrap_content"
                   android:text="선택하기" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="26dp">

               <TextView
                   android:id="@+id/signup_visa_title"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:includeFontPadding="false"
                   android:layout_height="wrap_content"
                   android:text="VISA카드 유무"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"/>

               <TextView
                   android:id="@+id/signup_visa_spinner"
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"
                   android:includeFontPadding="false"
                   android:layout_height="wrap_content"
                   android:text="선택하기" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="26dp">

               <TextView
                   android:id="@+id/signup_tel_title"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:layout_height="wrap_content"
                   android:includeFontPadding="false"
                   android:text="통신사"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"/>

               <TextView
                   android:id="@+id/signup_tel_spinner"
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:textSize="12dp"
                   android:textColor="#B7B7BC"
                   android:includeFontPadding="false"
                   android:layout_height="wrap_content"
                   android:text="선택하기" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp">

               <TextView
                   android:id="@+id/signup_money_title"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="4"
                   android:includeFontPadding="false"
                   android:text="사용중인 요금제"
                   android:textColor="#B7B7BC"
                   android:textSize="12dp" />

               <EditText
                   android:id="@+id/signup_money_edit"
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:includeFontPadding="false"
                   android:textColorHint="#B7B7BC"
                   android:textSize="12dp"
                   android:paddingLeft="10dp"
                   android:layout_height="wrap_content"
                   android:inputType="text"
                   android:backgroundTint="@android:color/white"
                   android:textColor="#B7B7BC"/>
           </LinearLayout>
       </LinearLayout>


        <TextView
            android:id="@+id/signup_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:text="추가 정보를 기입하시면 보다\n 더 정확한 정보를 제공받으실 수 있습니다"
            android:textAlignment="center"
            android:textColor="#B7B7BC"/>


        <ImageButton
            android:id="@+id/signup_addinfo_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/moreinformation_textinput"/>

    </LinearLayout>


</LinearLayout>

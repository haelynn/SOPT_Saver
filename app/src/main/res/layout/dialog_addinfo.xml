<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#fafafa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/dialog_addinfo_text1"
            android:text="추가정보를 입력하시겠습니까?"
            android:textColor="#000000"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dialog_addinfo_x_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/xicon"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
            android:id="@+id/dialog_addinfo_ok_btn"
            android:text="네"
            android:textColor="#000000"
            android:background="@drawable/topcustomline"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/dialog_addinfo_cancel_btn"
            android:text="나중에 하기"
            android:textColor="#000000"
            android:background="@drawable/topline"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#fafafa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/dialog_edit_text1"
            android:text="자신의 글을"
            android:textColor="#000000"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_edit_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하거나 삭제할 수 있습니다."
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_below="@+id/dialog_edit_text1"/>
        <ImageView
            android:id="@+id/dialog_edit_x_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/xicon"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
            android:id="@+id/dialog_edit_ok_btn"
            android:text="수정하기"
            android:textColor="#000000"
            android:includeFontPadding="false"
            android:background="@drawable/topcustomline"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/dialog_edit_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:includeFontPadding="false"
            android:background="@drawable/topline"
            android:text="삭제하기"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>

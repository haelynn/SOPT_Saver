<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_liketalkbox">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/detailpage_profilebg">
                <ImageView
                    android:id="@+id/electronics_seller_item_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/electronics_seller_user_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="아이디"
                android:textSize="9dp"
                android:textColor="#FB9726" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/electronics_seller_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="11dp"
                android:includeFontPadding="false"
                android:text="텍스트1"
                android:textSize="11dp"
                android:textColor="#323232"/>

            <LinearLayout
                android:id="@+id/mydeal_text2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/detailpage_money" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/electronics_seller_item_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트2"
                    android:textColor="#323232"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mydeal_text3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/detailpage_check" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/electronics_seller_item_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#323232"
                    android:includeFontPadding="false"
                    android:text="텍스트3"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mydeal_text4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/detailpage_where" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/electronics_seller_item_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트4"
                    android:textColor="#323232"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mydeal_text5_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/detailpage_time" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/electronics_seller_item_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트5"
                    android:textColor="#323232"
                    android:textSize="9dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#201a3d">

            <Button
            android:id="@+id/electronics_seller_open_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/detailpage_opentext" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
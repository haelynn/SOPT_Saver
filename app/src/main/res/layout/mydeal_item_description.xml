<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/main_liketalkbox"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/detailpage_profilebg"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/mydeal_item_img"
                        android:layout_width="69dp"
                        android:layout_height="69dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mydeal_item_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트1"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="11dp" />

                <LinearLayout
                    android:id="@+id/mydeal_text2_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mydeal_text2_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mydeal_question" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/mydeal_item_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="텍스트2"
                        android:textColor="#000000"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/mydeal_text3_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mydeal_text3_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mydeal_time" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/mydeal_item_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="텍스트3"
                        android:textColor="#000000"
                        android:textSize="9dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/mydeal_text4_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mydeal_text4_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mydeal_money" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/mydeal_item_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="텍스트4"
                        android:textColor="#000000"
                        android:textSize="9dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/mydeal_item_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트5"
                    android:textColor="#000000"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/mydeal_item_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="텍스트6"
                    android:layout_marginTop="3dp"
                    android:textColor="#fb9726"
                    android:textSize="9dp" />


                <LinearLayout
                    android:id="@+id/able_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:gravity="bottom|right">

                    <ImageView
                        android:id="@+id/electronics_item_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mydeal_talkicon" />

                    <TextView
                        android:id="@+id/mydeal_item_image1_text"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:text="text1"
                        android:textColor="#51c7c9"
                        android:textSize="9dp" />
                </LinearLayout>

            </LinearLayout>



    </LinearLayout>
</LinearLayout>
</LinearLayout>